<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- Registrazione del DispatcherServlet predefinito -->
    <bean id="dispatcherServlet" class="org.springframework.web.servlet.DispatcherServlet">
        <property name="contextConfigLocation" value=""/>
        <property name="throwExceptionIfNoHandlerFound" value="true"/>
    </bean>

    <!-- ServletRegistrationBean per il DispatcherServlet predefinito -->
    <bean id="dispatcherServletRegistration" class="org.springframework.boot.web.servlet.ServletRegistrationBean">
        <constructor-arg>
            <ref bean="dispatcherServlet"/>
        </constructor-arg>
        <constructor-arg>
            <value>/</value>
        </constructor-arg>
        <property name="loadOnStartup" value="1"/>
    </bean>

    <!-- Configurazione del servlet personalizzato -->
    <bean id="customDispatcherServlet" class="com.example.progettoSERVLETCONSAP.Servlet.CustomDispatcherServlet">
        <!-- Aggiungi eventuali proprietÃ  del servlet qui -->
    </bean>

    <!-- ServletRegistrationBean per il servlet personalizzato -->
    <bean id="customDispatcherServletRegistration" class="org.springframework.boot.web.servlet.ServletRegistrationBean">
        <property name="servlet" ref="customDispatcherServlet"/>
        <property name="urlMappings">
            <list>
                <value>/api/login/*</value> <!-- Mappa il servlet personalizzato solo per la richiesta a "/login" -->
            </list>
        </property>
        <property name="loadOnStartup" value="1"/>
    </bean>

</beans>

